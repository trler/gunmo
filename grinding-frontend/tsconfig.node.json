{
  "compilerOptions": {
    "composite": false,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": ["ES2020"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": false,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": [
    "vite.config.*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
} 